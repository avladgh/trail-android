<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.amalbit.animationongooglemap.polylineBased.MapsActivity" />

    <com.amalbit.trail.OverlayLayout
        android:id="@+id/mapOverlayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.amalbit.trail.marker.MarkerOverlayView
        android:id="@+id/markerOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include layout="@layout/layout_bottom_sheet" />
</FrameLayout>


